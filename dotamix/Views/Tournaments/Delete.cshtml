@model dotamix.Models.Tournament

@{
    ViewData["Title"] = "Удаление турнира";
}

<h1>Удаление турнира</h1>

<h3>Вы уверены, что хотите удалить этот турнир?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Название</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>

        <dt class="col-sm-2">Дата начала</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.StartDate)</dd>

        <dt class="col-sm-2">Дата окончания</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.EndDate)</dd>

        <dt class="col-sm-2">Статус</dt>
        <dd class="col-sm-10">
            <span class="badge @(Model.Status == TournamentStatus.Completed ? "bg-success" : "bg-primary")">
                @Model.Status.ToString()
            </span>
        </dd>

        <dt class="col-sm-2">Участники</dt>
        <dd class="col-sm-10">@Model.Participants?.Count</dd>

        <dt class="col-sm-2">Команды</dt>
        <dd class="col-sm-10">@Model.Teams?.Count</dd>

        <dt class="col-sm-2">Матчи</dt>
        <dd class="col-sm-10">@Model.Matches?.Count</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Вернуться к списку</a>
    </form>
</div> 