@model dotamix.Models.Tournament

@{
    ViewData["Title"] = "Детали турнира";
}

<h1>Детали турнира "@Model.Name"</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Название</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>

        <dt class="col-sm-2">Дата начала</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.StartDate)</dd>

        <dt class="col-sm-2">Дата окончания</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.EndDate)</dd>

        <dt class="col-sm-2">Статус</dt>
        <dd class="col-sm-10">
            <span class="badge @(Model.Status == TournamentStatus.Completed ? "bg-success" : "bg-primary")">
                @Model.Status.ToString()
            </span>
        </dd>
    </dl>

    @if (Model.Participants != null && Model.Participants.Any())
    {
        <h3>Участники</h3>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Имя</th>
                        <th>Никнейм</th>
                        <th>MMR</th>
                        <th>Позиция</th>
                        <th>Статус оплаты</th>
                        <th>Капитан</th>
                        <th>Команда</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var participant in Model.Participants)
                    {
                        <tr>
                            <td>@participant.User.Name</td>
                            <td>@participant.User.Nickname</td>
                            <td>@participant.MMR</td>
                            <td>
                                @participant.Positions
                            </td>
                            <td>
                                <span class="badge @(participant.IsPaid ? "bg-success" : "bg-danger")">
                                    @(participant.IsPaid ? "Оплачено" : "Не оплачено")
                                </span>
                            </td>
                            <td>
                                <span class="badge @(participant.IsCaptain ? "bg-primary" : "bg-secondary")">
                                    @(participant.IsCaptain ? "Да" : "Нет")
                                </span>
                            </td>
                            <td>
                                @if (participant.Team != null)
                                {
                                    <a asp-controller="Teams" asp-action="Details" asp-route-id="@participant.Team.Id">
                                        @participant.Team.Name
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">Нет команды</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="alert alert-info">В турнире пока нет участников.</p>
    }

    <div class="mt-4">
        <h3>Команды</h3>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Название</th>
                        <th>Капитан</th>
                        <th>Количество игроков</th>
                        <th>Средний MMR</th>
                        <th>Статус</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var team in Model.Teams)
                    {
                        <tr>
                            <td>@team.Name</td>
                            <td>@team.Captain.Name (@team.Captain.Nickname)</td>
                            <td>@team.Players.Count</td>
                            <td>@(team.Players.Any() ? team.Players.Average(p => p.MMR).ToString("F0") : "0")</td>
                            <td>@(team.IsWinner ? "Победитель" : "-")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Редактировать</a>
    <a asp-action="Index" class="btn btn-secondary">Назад к списку</a>
    <a asp-action="PaymentStatus" asp-route-id="@Model.Id" class="btn btn-info">Статус оплаты</a>


    <a asp-action="ImportParticipants" asp-route-id="@Model.Id" class="btn btn-success">Импорт участников</a>
    <a asp-action="SelectCaptains" asp-route-id="@Model.Id" class="btn btn-info">Выбрать капитанов</a>
    <a asp-action="FormTeams" asp-route-id="@Model.Id" class="btn btn-warning">Формировать команды</a>
    @if (Model.Status != TournamentStatus.InProgress && Model.Status != TournamentStatus.Completed)
    {
        <form asp-action="GenerateBracket10Teams" method="post" class="mb-3">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-primary">Сгенерировать сетку турнира</button>
        </form>
    }
    <a asp-action="Bracket" asp-route-id="@Model.Id" class="btn btn-info">Турнирная сетка</a>
</div> 