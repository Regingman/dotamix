@model dotamix.Models.Team

@{
    ViewData["Title"] = "Удаление команды";
}

<h1>Удаление команды</h1>

<h3>Вы уверены, что хотите удалить эту команду?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Name)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Tournament)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Tournament.Name)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Captain)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Captain.Name)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.IsWinner)</dt>
        <dd class="col-sm-10">@(Model.IsWinner ? "Да" : "Нет")</dd>

        <dt class="col-sm-2">Игроков в команде</dt>
        <dd class="col-sm-10">@Model.Players?.Count</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Назад к списку</a>
    </form>
</div> 