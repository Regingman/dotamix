@model IEnumerable<dotamix.Models.Match>

@{
    ViewData["Title"] = "Матчи";
}

<h1>Матчи</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Создать матч</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Tournament)</th>
            <th>@Html.DisplayNameFor(model => model.ScheduledTime)</th>
            <th>Команда 1</th>
            <th>Счет</th>
            <th>Команда 2</th>
            <th>@Html.DisplayNameFor(model => model.IsCompleted)</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Tournament.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.ScheduledTime)</td>
                <td>@Html.DisplayFor(modelItem => item.HomeTeam.Name)</td>
                <td>@item.HomeTeamScore - @item.AwayTeamScore</td>
                <td>@Html.DisplayFor(modelItem => item.AwayTeam.Name)</td>
                <td>@(item.IsCompleted ? "Да" : "Нет")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Редактировать</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Детали</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table> 